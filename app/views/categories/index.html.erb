<h1>Categories Index Page</h1>
<div>
<ul>
  <% @categories.each do |category| %>
    <li><%= link_to category.name, category %>
    <%= button_to "Delete", category_path(category), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>
<%= link_to "Add Category", new_category_path %>
</div>
